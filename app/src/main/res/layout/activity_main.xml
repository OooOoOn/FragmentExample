<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tool="http://schemas.android.com/tools">


    <fragment
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:name="com.example.arminvojnikovic.fragmentexample.TopFragment"
        tool:layout="@layout/top_section_fragment"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:id="@+id/fragment"
        />

    <fragment
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        tool:layout="@layout/bottom_section_fragment"
        android:name="com.example.arminvojnikovic.fragmentexample.BottomFragment"
        android:layout_below="@+id/fragment"
        android:id="@+id/fragment2"
        />

</RelativeLayout>