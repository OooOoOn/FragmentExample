<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.oooooon.rockscissorspaperlizzardspock.MainActivity"
    tools:layout_editor_absoluteY="81dp"
    tools:layout_editor_absoluteX="0dp">

    <TextView
        android:id="@+id/text_human_choice"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Human Choice"
        tools:layout_constraintTop_creator="1"
        tools:layout_constraintRight_creator="1"
        android:layout_marginEnd="49dp"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginTop="173dp"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginRight="49dp" />

    <ImageView
        android:id="@+id/image_human_choice"
        android:layout_width="0dp"
        android:layout_height="76dp"
        app:srcCompat="@drawable/paper"
        tools:layout_constraintRight_creator="1"
        tools:layout_constraintBottom_creator="1"
        app:layout_constraintBottom_toTopOf="@+id/text_human_choice"
        app:layout_constraintRight_toRightOf="@+id/text_human_choice"
        tools:layout_constraintLeft_creator="1"
        android:layout_marginBottom="14dp"
        app:layout_constraintLeft_toLeftOf="@+id/text_human_choice" />

    <TextView
        android:id="@+id/text_computer_choice"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Computer Choice"
        tools:layout_constraintTop_creator="1"
        android:layout_marginStart="42dp"
        android:layout_marginTop="16dp"
        app:layout_constraintTop_toBottomOf="@+id/image_computer_choice"
        tools:layout_constraintLeft_creator="1"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginLeft="42dp" />

    <ImageView
        android:id="@+id/image_computer_choice"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:srcCompat="@drawable/rock"
        tools:layout_constraintTop_creator="1"
        tools:layout_constraintRight_creator="1"
        tools:layout_constraintBottom_creator="1"
        android:layout_marginStart="9dp"
        app:layout_constraintBottom_toBottomOf="@+id/image_human_choice"
        android:layout_marginEnd="9dp"
        app:layout_constraintRight_toRightOf="@+id/text_computer_choice"
        tools:layout_constraintLeft_creator="1"
        app:layout_constraintLeft_toLeftOf="@+id/text_computer_choice"
        app:layout_constraintTop_toTopOf="@+id/image_human_choice"
        android:layout_marginLeft="9dp"
        android:layout_marginRight="9dp" />

    <TextView
        android:id="@+id/text_score"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Score: Human 0 Computer 0"
        tools:layout_constraintRight_creator="1"
        tools:layout_constraintBottom_creator="1"
        app:layout_constraintBottom_toTopOf="@+id/button_rock"
        app:layout_constraintRight_toRightOf="parent"
        tools:layout_constraintLeft_creator="1"
        android:layout_marginBottom="10dp"
        app:layout_constraintLeft_toLeftOf="parent" />

    <Button
        android:id="@+id/button_rock"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Rock"
        android:layout_marginStart="42dp"
        android:layout_marginEnd="40dp"
        app:layout_constraintRight_toLeftOf="@+id/button_add"
        tools:layout_constraintRight_creator="1"
        tools:layout_constraintBottom_creator="1"
        app:layout_constraintBottom_toTopOf="@+id/button_lizzard"
        tools:layout_constraintLeft_creator="1"
        android:layout_marginBottom="18dp"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginLeft="42dp"
        android:layout_marginRight="40dp" />

    <Button
        android:id="@+id/button_scissors"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Scissors"
        android:layout_marginStart="18dp"
        tools:layout_constraintTop_creator="1"
        android:layout_marginTop="10dp"
        app:layout_constraintTop_toBottomOf="@+id/text_score"
        tools:layout_constraintLeft_creator="1"
        app:layout_constraintLeft_toRightOf="@+id/button_rock"
        android:layout_marginLeft="18dp" />

    <Button
        android:id="@+id/button_paper"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Paper"
        android:layout_marginStart="21dp"
        tools:layout_constraintTop_creator="1"
        android:layout_marginTop="11dp"
        app:layout_constraintTop_toBottomOf="@+id/text_score"
        tools:layout_constraintLeft_creator="1"
        app:layout_constraintLeft_toRightOf="@+id/button_scissors"
        android:layout_marginLeft="21dp" />

    <Button
        android:id="@+id/button_lizzard"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Lizzard"
        android:layout_marginStart="84dp"
        android:layout_marginEnd="78dp"
        tools:layout_constraintRight_creator="1"
        tools:layout_constraintBottom_creator="1"
        app:layout_constraintBottom_toTopOf="@+id/editText_name"
        app:layout_constraintRight_toRightOf="@+id/button_add"
        tools:layout_constraintLeft_creator="1"
        android:layout_marginBottom="13dp"
        app:layout_constraintLeft_toLeftOf="@+id/editText_name"
        android:layout_marginLeft="84dp"
        android:layout_marginRight="78dp" />

    <Button
        android:id="@+id/button_Spock"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Spock"
        android:layout_marginStart="23dp"
        app:layout_constraintBaseline_toBaselineOf="@+id/button_lizzard"
        tools:layout_constraintBaseline_creator="1"
        tools:layout_constraintLeft_creator="1"
        app:layout_constraintLeft_toRightOf="@+id/button_lizzard"
        android:layout_marginLeft="23dp" />

    <EditText
        android:layout_width="0dp"
        android:hint="Enter player name"
        android:layout_height="wrap_content"
        android:id="@+id/editText_name"
        android:inputType="text"
        android:layout_marginStart="8dp"
        android:layout_marginEnd="11dp"
        app:layout_constraintRight_toLeftOf="@+id/button_add"
        tools:layout_constraintRight_creator="1"
        tools:layout_constraintBottom_creator="1"
        app:layout_constraintBottom_toBottomOf="parent"
        tools:layout_constraintLeft_creator="1"
        android:layout_marginBottom="47dp"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="11dp" />

    <EditText
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:hint="player score"
        android:id="@+id/editText_score"
        tools:layout_constraintBottom_creator="1"
        app:layout_constraintBottom_toBottomOf="parent"
        tools:layout_constraintLeft_creator="1"
        android:layout_marginBottom="5dp"
        app:layout_constraintLeft_toLeftOf="@+id/editText_name" />

    <Button
        android:id="@+id/button_add"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Submit"
        android:layout_marginEnd="9dp"
        app:layout_constraintRight_toLeftOf="@+id/button_Highscore"
        tools:layout_constraintTop_creator="1"
        tools:layout_constraintRight_creator="1"
        android:layout_marginTop="14dp"
        app:layout_constraintTop_toTopOf="@+id/editText_name"
        android:layout_marginRight="9dp" />

    <Button
        android:id="@+id/button_Highscore"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Highscore"
        android:layout_marginEnd="16dp"
        tools:layout_constraintRight_creator="1"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintBaseline_toBaselineOf="@+id/button_add"
        tools:layout_constraintBaseline_creator="1"
        android:layout_marginRight="16dp" />
</android.support.constraint.ConstraintLayout>
